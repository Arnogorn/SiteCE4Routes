{% extends 'base.html.twig' %}

{% block title %}Liste des chevaux{% endblock %}

{% block body %}
    <h1>Liste des chevaux</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Photo</th>
                <th>Nom</th>
                <th>Nom du Père</th>
                <th>Nom de la Mère</th>
                <th>Sexe</th>
                <th>Âge</th>
                <th>Lieu de Naissance</th>
                <th>Informations</th>
                <th>Cheval de club</th>
                {% if app.user and 'ROLE_ADMIN' in app.user.roles %}
                <th>À Vendre</th>
                <th>Vendu</th>
                {% endif %}
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cheval in chevaux %}
            <tr>
                <td>{% if cheval.photo != null %}
                        <img src="{{ asset('uploads/chevaux/' ~ cheval.photo) }}" alt="{{ cheval.nom }}">
                    {% else %}
                        <img src="{{ asset('uploads/utilisateurs/logoED4R_redimension.png') }}" alt="photo par défaut">

                    {% endif %}</td>
                <td>{{ cheval.nom }}</td>
                <td>{{ cheval.nomPere }}</td>
                <td>{{ cheval.nomMere }}</td>
                <td>{{ cheval.sexe.libelle }}</td>
                <td>
                {% if cheval.dateNaissance %}
                    {% set age_years = date('now').diff(date(cheval.dateNaissance)).y %}
                    {% if age_years >= 1 %}
                        {{ age_years }} an{% if age_years > 1 %}s{% endif %}
                    {% else %}
                        {% set age_months = date('now').diff(date(cheval.dateNaissance)).m %}
                        {{ age_months }} mois
                    {% endif %}
                {% else %}
                    Âge inconnu
                {% endif %}
                </td>
                <td>{{ cheval.lieuNaissance }}</td>
                <td>{{ cheval.infos }}</td>
                <td>{{ cheval.appartientEcurie ? 'Oui' : 'Non' }}</td>
                {% if  app.user and 'ROLE_ADMIN' in app.user.roles %}
                <td>{{ cheval.aVendre ? 'Oui' : 'Non' }}</td>
                <td>{{ cheval.vendu ? 'Oui' : 'Non' }}</td>
                {% endif %}
                <td>
                    <a href="{{ path('app_cheval_show', {'id': cheval.id}) }}">Voir</a>
                    {% if (app.user and cheval.user and app.user.id == cheval.user.id) or (app.user and 'ROLE_ADMIN' in app.user.roles) %}
                    <a href="{{ path('app_cheval_edit', {'id': cheval.id}) }}">Modifier</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">Aucun cheval trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if app.user and 'ROLE_ADMIN' in app.user.roles %}
    <a href="{{ path('app_cheval_new') }}">Ajouter un nouveau cheval</a>
    {% endif %}
{% endblock %}
