{% extends 'base.html.twig' %}

{% block title %}Historique des paiements (admin){% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>üìã Historique des paiements - Administration</h1>

            {% if statistiques is defined %}
                <div class="badge bg-primary fs-6">
                    {{ logs|length }} r√©sultat(s)
                </div>
            {% endif %}
        </div>

        {# Statistiques rapides #}
        {% if statistiques is defined %}
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title text-primary">{{ statistiques.total }}</h5>
                            <p class="card-text">Total paiements</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title text-success">{{ statistiques.reussis }}</h5>
                            <p class="card-text">R√©ussis</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title text-danger">{{ statistiques.annules }}</h5>
                            <p class="card-text">Annul√©s</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title text-info">{{ statistiques.taux_reussite }}%</h5>
                            <p class="card-text">Taux de r√©ussite</p>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}

        {# Formulaire de filtrage am√©lior√© #}
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">üîç Filtres de recherche</h5>
            </div>
            <div class="card-body">
                <form method="get" class="row g-3">
                    <div class="col-md-4">
                        <label for="email" class="form-label">Email utilisateur</label>
                        <input type="email" id="email" name="email" class="form-control"
                               value="{{ filters.email ?? '' }}"
                               placeholder="ex: utilisateur@example.com">
                    </div>

                    <div class="col-md-4">
                        <label for="nom" class="form-label">Nom ou Pr√©nom</label>
                        <input type="text" id="nom" name="nom" class="form-control"
                               value="{{ filters.nom ?? '' }}"
                               placeholder="ex: Dupont ou Marie">
                    </div>

                    <div class="col-md-4">
                        <label for="type" class="form-label">Type de paiement</label>
                        <select id="type" name="type" class="form-select">
                            <option value="">-- Tous --</option>
                            <option value="paiement_annule" {% if (filters.type?? '' ) == 'paiement_annule' %}selected{% endif %}>‚ùå Annul√©</option>
                            <option value="paiement_reussi" {% if (filters.type?? '' ) == 'paiement_reussi' %}selected{% endif %}>‚úÖ R√©ussi</option>
                        </select>
                    </div>

                    <div class="col-md-4">
                        <label for="sortie" class="form-label">Titre de la sortie</label>
                        <input type="text" id="sortie" name="sortie" class="form-control"
                               value="{{ filters.sortie ?? '' }}"
                               placeholder="ex: Randonn√©e">
                    </div>

                    <div class="col-md-4">
                        <label for="date_debut" class="form-label">Date d√©but</label>
                        <input type="datetime-local" id="date_debut" name="date_debut" class="form-control"
                               value="{{ filters.date_debut ?? '' }}">
                    </div>

                    <div class="col-md-4">
                        <label for="date_fin" class="form-label">Date fin</label>
                        <input type="datetime-local" id="date_fin" name="date_fin" class="form-control"
                               value="{{ filters.date_fin ?? '' }}">
                    </div>

                    <div class="col-12">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                üîç Filtrer
                            </button>
                            <a href="{{ path('admin_index_paiement') }}" class="btn btn-outline-secondary">
                                üîÑ R√©initialiser
                            </a>
                            {% if logs is not empty %}
                                <a href="{{ path('historique_export_csv', filters) }}" class="btn btn-success">
                                    üì§ Exporter CSV ({{ logs|length }} lignes)
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </form>
            </div>
        </div>

        {# R√©sultats #}
        {% if logs is empty %}
            <div class="alert alert-info d-flex align-items-center">
                <i class="bi bi-info-circle me-2"></i>
                <div>
                    {% if filters is empty %}
                        Aucun paiement enregistr√© pour le moment.
                    {% else %}
                        Aucun r√©sultat trouv√© pour ces crit√®res de recherche.
                    {% endif %}
                </div>
            </div>
        {% else %}
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">üìä R√©sultats ({{ logs|length }})</h5>
                    <small class="text-muted">Tri√©s par date d√©croissante</small>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                        <tr>
                            <th>üìÖ Date</th>
                            <th>üë§ Utilisateur</th>
                            <th>üí≥ Type</th>
                            <th>üéØ Sortie</th>
                            <th>üìù Message</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for log in logs %}
                            <tr class="{% if log.type == 'paiement_annule' %}table-danger{% elseif log.type == 'paiement_reussi' %}table-success{% endif %}">
                                <td>
                                    <small class="text-muted">{{ log.date|date('d/m/Y') }}</small><br>
                                    <strong>{{ log.date|date('H:i') }}</strong>
                                </td>
                                <td>
                                    <div>
                                        <strong>{{ log.utilisateur.prenom }} {{ log.utilisateur.nom }}</strong><br>
                                        <small class="text-muted">{{ log.utilisateur.email }}</small>
                                    </div>
                                </td>
                                <td>
                                    {% if log.type == 'paiement_annule' %}
                                        <span class="badge bg-danger">‚ùå Annul√©</span>
                                    {% elseif log.type == 'paiement_reussi' %}
                                        <span class="badge bg-success">‚úÖ R√©ussi</span>
                                    {% else %}
                                        <span class="badge bg-secondary">{{ log.type }}</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if log.sortie %}
                                        <strong>{{ log.sortie.titre }}</strong><br>
                                        <small class="text-muted">{{ log.sortie.date|date('d/m/Y') }}</small>
                                    {% else %}
                                        <span class="text-muted">‚Äî</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <small>{{ log.message }}</small>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        {% endif %}
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-compl√©tion simple pour l'email (optionnel)
            const emailInput = document.getElementById('email');
            if (emailInput) {
                emailInput.addEventListener('input', function() {
                    // Vous pouvez ajouter une logique d'auto-compl√©tion ici
                });
            }

            // Validation des dates
            const dateDebut = document.getElementById('date_debut');
            const dateFin = document.getElementById('date_fin');

            if (dateDebut && dateFin) {
                dateDebut.addEventListener('change', function() {
                    if (dateFin.value && this.value > dateFin.value) {
                        alert('La date de d√©but ne peut pas √™tre post√©rieure √† la date de fin');
                        this.value = '';
                    }
                });

                dateFin.addEventListener('change', function() {
                    if (dateDebut.value && this.value < dateDebut.value) {
                        alert('La date de fin ne peut pas √™tre ant√©rieure √† la date de d√©but');
                        this.value = '';
                    }
                });
            }
        });
    </script>
{% endblock %}