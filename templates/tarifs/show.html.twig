{% extends 'base.html.twig' %}

{% block title %}{{ tarif.categorie }} - Écuries des 4 Routes{% endblock %}

{% block body %}
    <section class="py-5">
        <div class="container">
            {# En-tête avec style moderne #}
            <div class="text-center mb-5">
                <h1 class="text-primary-brand mb-3">
                    <i class="bi bi-eye" style="color: var(--accent-color);"></i>
                    Détails du Tarif
                    <i class="bi bi-eye" style="color: var(--accent-color);"></i>
                </h1>
                <div style="height: 3px; width: 200px; background: linear-gradient(90deg, var(--primary-color), var(--accent-color), var(--primary-color)); margin: 0 auto; border-radius: 2px;"></div>
                <p class="mt-3" style="color: var(--text-secondary);">
                    Consultez toutes les informations de ce tarif
                </p>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card-modern">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h3 class="text-primary-brand mb-0">
                                <i class="bi bi-info-circle me-2"></i>Informations détaillées
                            </h3>
                        </div>

                        {# Messages flash #}
                        {% for type, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="alert alert-{{ type == 'error' ? 'danger' : type }} alert-dismissible fade show mb-4" role="alert">
                                    {% if type == 'success' %}
                                        <i class="bi bi-check-circle-fill me-2"></i>
                                    {% elseif type == 'error' %}
                                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                    {% endif %}
                                    {{ message }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            {% endfor %}
                        {% endfor %}

                        {# Tableau des informations  #}
                        <div class="table-responsive">
                            <table class="table table-borderless" style="background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-tertiary) 100%); border-radius: 12px; overflow: hidden;">
                                <tbody>

                                <tr style="border-bottom: 2px solid var(--border-color);">
                                    <th style="background: linear-gradient(135deg, var(--primary-light) 0%, var(--primary-ultra-light) 100%); color: var(--primary-color); font-weight: 600; padding: 1rem;">
                                        <i class="bi bi-folder me-2"></i>Catégorie
                                    </th>
                                    <td style="padding: 1rem; color: var(--text-primary);">
                                        <span class="badge bg-accent-brand text-white fs-6">{{ tarif.categorie }}</span>
                                    </td>
                                </tr>
                                <tr style="border-bottom: 2px solid var(--border-color);">
                                    <th style="background: linear-gradient(135deg, var(--primary-light) 0%, var(--primary-ultra-light) 100%); color: var(--primary-color); font-weight: 600; padding: 1rem;">
                                        <i class="bi bi-chat-text me-2"></i>Description
                                    </th>
                                    <td style="padding: 1rem; color: var(--text-primary);">
                                        {% if tarif.description %}
                                            <div style="line-height: 1.6;">{{ tarif.description|nl2br }}</div>
                                        {% else %}
                                            <span class="text-muted fst-italic">Aucune description</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th style="background: linear-gradient(135deg, var(--primary-light) 0%, var(--primary-ultra-light) 100%); color: var(--primary-color); font-weight: 600; padding: 1rem;">
                                        <i class="bi bi-currency-euro me-2"></i>Prix
                                    </th>
                                    <td style="padding: 1rem;">
                                        {% if tarif.prix == '0' %}
                                            <span class="badge bg-success fs-5 px-3 py-2">
                                                    <i class="bi bi-gift me-2"></i>Gratuit
                                                </span>
                                        {% else %}
                                            <span class="badge bg-success fs-5 px-3 py-2">{{ tarif.prix }}€</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    {# Calculs spéciaux pour la catégorie forfait (34 séances) #}
                    <div class="card-modern mt-4">
                        <h4 class="text-primary-brand mb-4">
                            <i class="bi bi-calculator me-2"></i>Calculateur de coûts
                        </h4>

                        {% if tarif.categorie|lower == 'forfait' %}

                        <div class="row g-12">
                            <div class="col-lg-12 col-md-6">
                                <div class="p-3 text-center" style="background: var(--bg-tertiary); border-radius: 8px; border: 1px solid var(--border-color);">
                                    <h6 class="text-primary-brand mb-2">Prix par séance</h6>
                                    <span class="badge bg-secondary" style="font-size: 1rem; padding: 0.4rem 0.8rem;">
                        {{ (tarif.prix / 34)|number_format(2) }}€
                                    </span>
                                    <div class="mt-2">
                                        <small class="text-muted">Forfait ÷ 34 séances</small>
                                    </div>
                                </div>
                            </div>


                        </div>
                        {% endif %}
                    </div>

                    {# Actions disponibles #}
                    <div class="card-modern mt-4">
                        <h5 class="text-primary-brand mb-3">
                            <i class="bi bi-tools me-2"></i>Actions disponibles
                        </h5>
                        <div class="d-flex flex-wrap justify-content-center align-items-center gap-3">
                            <div class="d-flex gap-2">
                                <a href="{{ path('app_tarifs_index') }}" class="btn btn-outline-modern">
                                    <i class="bi bi-arrow-left me-2"></i>Retour à la liste
                                </a>
                                <a href="{{ path('app_tarifs_edit', {'id': tarif.id}) }}" class="btn btn-modern-primary">
                                    <i class="bi bi-pencil me-2"></i>Modifier ce tarif
                                </a>
                            </div>

                            {# Bouton supprimer avec modal #}
                            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                <i class="bi bi-trash me-2"></i>Supprimer
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Modal de suppression #}
        <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content" style="border-radius: 20px; border: 2px solid var(--border-color);">
                    <div class="modal-header" style="background: linear-gradient(135deg, var(--primary-light) 0%, var(--primary-ultra-light) 100%); border-radius: 18px 18px 0 0;">
                        <h5 class="modal-title text-primary-brand" id="deleteModalLabel">
                            <i class="bi bi-exclamation-triangle me-2"></i>Confirmer la suppression
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body text-center">
                        <div class="mb-3">
                            <i class="bi bi-exclamation-triangle text-warning" style="font-size: 4rem;"></i>
                        </div>
                        <h6 class="text-primary-brand mb-3">Êtes-vous sûr de vouloir supprimer ce tarif ?</h6>
                        <div class="alert alert-warning">
                            <p class="mb-2"><strong>"{{ tarif.categorie }}"</strong></p>
                            <small>
                                <i class="bi bi-exclamation-triangle me-1"></i>
                                Cette action est irréversible. Le tarif sera définitivement supprimé.
                            </small>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-modern" data-bs-dismiss="modal">
                            <i class="bi bi-x-circle me-2"></i>Annuler
                        </button>
                        <form method="post" action="{{ path('app_tarifs_delete', {'id': tarif.id}) }}" class="d-inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tarif.id) }}">
                            <button type="submit" class="btn btn-outline-danger">
                                <i class="bi bi-trash me-2"></i>Supprimer définitivement
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}