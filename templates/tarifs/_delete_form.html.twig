<form method="post" action="{{ path('app_tarifs_delete', {'id': tarif.id}) }}"
      onsubmit="return confirm('⚠️ Êtes-vous sûr de vouloir supprimer ce tarif ?\n\nCette action est définitive et ne peut pas être annulée.');"
      class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tarif.id) }}">
    <button type="submit" class="btn btn-outline-danger">
        <i class="bi bi-trash me-2"></i>Supprimer définitivement
    </button>
</form>