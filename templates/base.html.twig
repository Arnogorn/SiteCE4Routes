<!DOCTYPE html>
<html lang="fr">
<head>
    {% if app.environment == 'prod' %}
        <meta name="robots" content="index, follow">
    {% else %}
        <meta name="robots" content="noindex, nofollow">
    {% endif %}

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>
        {% block title %}
            Écurie Des 4 Routes
        {% endblock %}
    </title>
    {# mettre un block meta description sur toutes les pages du site #}
    <meta name="description" content="{% block meta_description %}Écurie Des 4 Routes - Découvrez notre écurie équestre en Bretagne. Cours d'équitation, pension pour chevaux, stages et balades.{% endblock %}">

    {# Géolocalisation #}
    <meta name="geo.region" content="FR-35">
    <meta name="geo.place_name" content="Iffendic">
    <meta name="geo.position" content="48.090811;-2.002566">
    <meta name="ICBM" content="48.090811, -2.002566">

    {# Favicons #}
    <link rel="icon" type="image/x-icon" href="{{ asset('images/favicon.ico') }}">
    <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('images/apple-touch-icon.png') }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('images/favicon-32x32.png') }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('images/favicon-16x16.png') }}">

    {% block stylesheets %}
        {# Bootstrap CSS depuis CDN #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
              rel="stylesheet"
              integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
              crossorigin="anonymous">

        {# Bootstrap Icons #}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

        {# Asset Mapper - importe automatiquement vos CSS et JS #}
        {% block importmap %}
            {{ importmap(['app', 'styles/planning.css', 'styles/birthday.css', 'styles/darkTheme.css']) }}

        {% endblock %}
    {% endblock %}
    <style>
      @media (max-width: 767.98px) {
          body.d-flex {
              display: block !important;
          }
          .footer-sticky {
              position: static !important;
          }
          main {
              flex: none !important;
          }
          main .container {
              padding-bottom: 0 !important;
              margin-bottom: 0 !important;
          }
      }
    </style>
    {# Bootstrap JS - Reste en CDN pour éviter les conflits #}
    <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous">
    </script>


    {% block javascript %}{% endblock %}
</head>

<body class="d-flex flex-column">
<header>
    <div class="container">
        {% include '_navbar.html.twig' %}
    </div>
</header>

<main class="flex-grow-1">
    {% for message in app.flashes('warning') %}
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('danger') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="container">
        {% block body %}{% endblock %}
    </div>
</main>

{# Footer sticky fixe en bas #}
<footer class="footer-sticky">
    <div class="container-fluid px-3">
        {# Version desktop #}
        <div class="d-none d-md-flex justify-content-between align-items-center w-100">
            <a href="https://www.google.fr/maps/search/?api=1&query=Ecuries+des+quatre+routes+35750+IFFENDIC"
               target="_blank" rel="noopener"
               class="text-white text-decoration-none d-flex align-items-center">
                <i class="bi bi-geo-alt-fill me-2"></i>
                <span>&copy; {{ "now"|date("Y") }} - Écuries Des 4 Routes - 217 Les Quatre Routes, 35750 Iffendic</span>
            </a>
            <div class="d-flex align-items-center">
                <a id="phone-link" class="text-white text-decoration-none d-flex align-items-center me-4">
                    <i class="bi bi-telephone-fill me-2"></i>
                    <span id="phone-display">Afficher le numéro</span>
                </a>
                <a href="https://www.facebook.com/people/Ecuries-des-4-routes/100037905025229/" class="text-white text-decoration-none me-3" target="_blank" rel="noopener noreferrer">
                    <i class="bi bi-facebook"></i>
                </a>
                <a href="https://www.instagram.com/ecuriesdes4routes/" class="text-white text-decoration-none me-3" target="_blank" rel="noopener noreferrer">
                    <i class="bi bi-instagram"></i>
                </a>
                <a href="https://www.tiktok.com/@lorrainekitzingdressage?_t=ZN-8x3waKV93WY&_r=1" class="text-white text-decoration-none" target="_blank" rel="noopener noreferrer">
                    <i class="bi bi-tiktok"></i>
                </a>
            </div>
        </div>

        {# Version mobile #}
        <div class="d-md-none">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <div class="footer-mobile-section">
                    <a href="https://www.google.fr/maps/search/?api=1&query=Ecuries+des+quatre+routes+35750+IFFENDIC"
                       target="_blank" rel="noopener"
                       class="text-white text-decoration-none d-flex align-items-center">
                        <i class="bi bi-geo-alt-fill me-2 footer-mobile-icon"></i>
                        <div class="footer-mobile-text">
                            <div class="footer-mobile-label">Adresse</div>
                            <div class="footer-mobile-value">Iffendic (35750)</div>
                        </div>
                    </a>
                </div>
                <div class="footer-mobile-section">
                    <a id="phone-link-mobile" class="text-white text-decoration-none d-flex align-items-center">
                        <i class="bi bi-telephone-fill me-2 footer-mobile-icon"></i>
                        <div class="footer-mobile-text">
                            <div class="footer-mobile-label">Téléphone</div>
                            <div class="footer-mobile-value" id="phone-display-mobile">Afficher</div>
                        </div>
                    </a>
                </div>
            </div>
            <div class="d-flex justify-content-center align-items-center mt-3">
                <a href="https://www.facebook.com/people/Ecuries-des-4-routes/100037905025229/" class="text-white text-decoration-none me-3" target="_blank" rel="noopener noreferrer">
                    <i class="bi bi-facebook footer-mobile-icon"></i>
                </a>
                <a href="https://www.instagram.com/ecuriesdes4routes/" class="text-white text-decoration-none me-3" target="_blank" rel="noopener noreferrer">
                    <i class="bi bi-instagram footer-mobile-icon"></i>
                </a>
                <a href="https://www.tiktok.com/@lorrainekitzingdressage?_t=ZN-8x3waKV93WY&_r=1" class="text-white text-decoration-none" target="_blank" rel="noopener noreferrer">
                    <i class="bi bi-tiktok footer-mobile-icon"></i>
                </a>
            </div>
            <div class="text-center">
                <small class="footer-mobile-copyright" style="opacity: 0.7;">
                    &copy; {{ "now"|date("Y") }} Écuries Des 4 Routes
                </small>
            </div>
        </div>
        <a href="javascript:void(0)"
           onclick="fetch('/log-honeypot-click'); return false;"
           class="honeypot"
           aria-hidden="true">09 99 99 99 99</a>
    </div>
</footer>

{% block extraJs %}

{% endblock %}
</body>
</html>