{% extends 'base.html.twig' %}

{% block title %}Sortie index{% endblock %}

{% block body %}

    <h1>Liste des sorties</h1>

    <div class="mb-4">
        {{ form_start(form) }}
            <div class="row g-3">
                <div class="col-md-3">
                    {{ form_row(form.titre) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.dateMin) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.dateMax) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.niveau) }}
                </div>
                {% if is_granted('ROLE_ADMIN') %}
                <div class="col-md-3">
                    {{ form_row(form.etat) }}
                </div>
                {% endif %}
                <div class="col-md-3">
                    {{ form_row(form.tri) }}
                </div>
                <div class="col-md-3 align-self-end">
                    {{ form_row(form.rechercher) }}
                </div>
            </div>
        {{ form_end(form) }}
        <div class="mt-2">
            <a href="{{ path('app_sortie_index') }}" class="btn btn-outline-secondary">Réinitialiser les filtres</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>
                    <a href="{{ path('app_sortie_index', app.request.query.all | merge({'tri': 'asc'})) }}">Date ↑</a> |
                    <a href="{{ path('app_sortie_index', app.request.query.all | merge({'tri': 'desc'})) }}">↓</a>
                </th>
                <th>Durée (en minutes)</th>
                <th>Date limite d'inscription</th>
                <th>Nombre maximum d'inscriptions</th>
                <th>Niveaux Admis</th>
                <th>Prix</th>
                <th>Informations</th>

                <th>État de la sortie</th>
                {% if is_granted('ROLE_ADMIN') %}
                <th>Sortie publiée</th>
                {% endif %}
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sortie in sorties %}
            {% if is_granted('ROLE_ADMIN') or sortie.etat.libelle != "Archivée" %}
            <tr>
                <td>{{ sortie.titre }}</td>
                <td>{{ sortie.date ? sortie.date|date('d-m-Y H:i:s') : '' }}</td>
                <td>{{ sortie.duree }}min</td>
                <td>{{ sortie.dateLimiteInscription ? sortie.dateLimiteInscription|date('d-m-Y H:i:s') : '' }}</td>
                <td>{{ sortie.participants|length + sortie.membresFamilleInscrits|length }}/{{ sortie.nbInscriptionMax }}</td>
                <td>
                    {% if sortie.niveauxAdmis|length > 0 %}
                        <ul class="list-unstyled mb-0">
                            {% for niveau in sortie.niveauxAdmis %}
                                <li>{{ niveau.libelle }}</li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <span class="text-muted">Aucun niveau spécifié</span>
                    {% endif %}
                </td>
                <td>{{ sortie.prix }} €</td>
                <td>{{ sortie.infos }}</td>

                <td><p class="border rounded
                        {% if sortie.etat.libelle == 'Créée' %}
                            border-warning
                        {% elseif sortie.etat.libelle == 'Ouverte' %}
                            border-success
                        {% elseif sortie.etat.libelle == 'Clôturée' %}
                            border-info
                        {% elseif sortie.etat.libelle == 'Activité en cours' %}
                            border-primary
                        {% elseif sortie.etat.libelle == 'Passée' %}
                            border-secondary
                        {% else %}
                            border-danger
                        {% endif %}">{{ sortie.etat.libelle }}</p></td>

                {% if is_granted('ROLE_ADMIN') %}
                <td>{{ sortie.isPublished ? 'Oui' : 'Non' }}</td>
                {% endif %}
                <td>
                    <a href="{{ path('app_sortie_show', {'id': sortie.id}) }}">Voir</a>
                    <a href="{{ path('paiement_choisir_membres', {'id': sortie.id}) }}">Inscrire ma famille</a>

                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_sortie_edit', {'id': sortie.id}) }}">Modifier</a>
                            {% if sortie.etat.libelle == 'Créée' %}
                        <a href="{{ path('sortie_publier', {'id': sortie.id}) }}"
                           class="btn btn-outline-primary mt-2">
                            <i class="bi bi-upload"></i> Publier
                        </a>
                            {% endif %}
                    {% endif %}
                </td>
            </tr>
            {% endif %}
        {% else %}
            <tr>
                <td colspan="10">Aucune sortie trouvée</td>
            </tr>
            {% if form is defined %}
                <tr>
                    <td colspan="10">
                        <p>Essayez de modifier les filtres pour afficher d'autres résultats.</p>
                    </td>
                </tr>
            {% endif %}

        {% endfor %}
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_sortie_new') }}">Ajouter une nouvelle sortie</a>
    {% endif %}

{% endblock %}
