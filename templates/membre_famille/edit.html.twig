{% extends 'base.html.twig' %}

{% block title %}Modifier {{ membre_famille.prenom }} {{ membre_famille.nom }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        {# En-tête #}
        <div class="text-center mb-5">
            <h1 class="text-primary-brand mb-3">
                <i class="bi bi-pencil" style="color: var(--accent-color);"></i>
                Modifier un membre de famille
                <i class="bi bi-pencil" style="color: var(--accent-color);"></i>
            </h1>
            <div style="height: 3px; width: 200px; background: linear-gradient(90deg, var(--primary-color), var(--accent-color), var(--primary-color)); margin: 0 auto; border-radius: 2px;"></div>
            <p class="mt-3" style="color: var(--text-secondary);">
                Modification de <strong>{{ membre_famille.prenom }} {{ membre_famille.nom }}</strong>
            </p>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card-modern">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h3 class="text-primary-brand mb-0">
                            <i class="bi bi-form me-2"></i>Modifier les informations
                        </h3>
                        <span class="badge bg-primary-brand">
                        <i class="bi bi-person-heart me-1"></i>Membre existant
                    </span>
                    </div>

                    <div class="form-text-modern mb-4">
                        <i class="bi bi-info-circle me-2"></i>
                        Modifiez les informations de votre membre de famille.
                        Les champs marqués d'un astérisque (*) sont obligatoires.
                    </div>

                    {{ include('membre_famille/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
                </div>

                {# Actions #}
                <div class="card-modern mt-4">
                    <div class="d-flex flex-wrap gap-3 justify-content-center">
                        <a href="{{ path('app_membre_famille_index') }}" class="btn btn-outline-modern">
                            <i class="bi bi-arrow-left me-2"></i>Retour à la liste
                        </a>

                        <a href="{{ path('app_membre_famille_show', {'id': membre_famille.id}) }}" class="btn btn-outline-modern">
                            <i class="bi bi-eye me-2"></i>Voir le profil
                        </a>

                        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <i class="bi bi-trash me-2"></i>Supprimer
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Modal de suppression #}
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-primary-brand" id="deleteModalLabel">
                        <i class="bi bi-exclamation-triangle me-2"></i>Confirmer la suppression
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Êtes-vous sûr de vouloir supprimer <strong>{{ membre_famille.prenom }} {{ membre_famille.nom }}</strong> ?</p>
                    <p class="text-danger"><small><i class="bi bi-exclamation-triangle me-1"></i>Cette action est irréversible.</small></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-modern" data-bs-dismiss="modal">Annuler</button>
                    {{ include('membre_famille/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}