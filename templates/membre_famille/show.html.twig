{% extends 'base.html.twig' %}

{% block title %}MembreFamille{% endblock %}

{% block body %}
    <h1>MembreFamille</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ membre_famille.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ membre_famille.nom }}</td>
