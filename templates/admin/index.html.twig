                                   onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='var(--shadow-sm)'">
                                    <i class="bi bi-compass" style="font-size: 2rem; color: var(--accent-color); margin-bottom: 0.5rem;"></i>
                                    <strong>Sorties</strong>
                                    <small class="text-muted">Gérer les sorties</small>
                                </a>
                            </div>

                            <div class="col-md-6">
                                <a href="{{ path('app_competition_index') }}" class="btn w-100 d-flex flex-column align-items-center p-3 text-decoration-none"
