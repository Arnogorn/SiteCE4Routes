{% extends 'base.html.twig' %}

{% block title %}Espace Administrateur - Écuries des 4 Routes{% endblock %}

{% block body %}
    <section class="py-5">
        <div class="container">

            <div class="text-center mb-5">
                <h1 class="text-primary-brand mb-3">
                    <i class="bi bi-gear-fill" style="color: var(--accent-color);"></i>
                    Espace Administrateur
                    <i class="bi bi-gear-fill" style="color: var(--accent-color);"></i>
                </h1>
                <div style="height: 3px; width: 200px; background: linear-gradient(90deg, var(--primary-color), var(--accent-color), var(--primary-color)); margin: 0 auto; border-radius: 2px;"></div>
                <p class="mt-3" style="color: var(--text-secondary);">
                    Gérez tous les aspects de votre écurie depuis ce tableau de bord
                </p>
            </div>




            <div class="row g-4">

                <div class="col-lg-6">
                    <div class="card-modern">
                        <h4 class="text-primary-brand mb-4">
                            <i class="bi bi-database me-2" style="color: var(--accent-color);"></i>
                            Gestion des Données Principales
                        </h4>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <a href="{{ path('app_cheval_index') }}" class="btn w-100 d-flex flex-column align-items-center p-3 text-decoration-none"
                                   style="background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--primary-ultra-light) 100%); border: 2px solid var(--border-color); border-radius: 12px; color: var(--primary-color); transition: var(--transition-base);"
                                   onmouseover="this.style.transform='translateY(-5px)'; this.style.boxShadow='var(--shadow-lg)'"
                                   onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='var(--shadow-sm)'">
                                    <i class="bi bi-heart-fill" style="font-size: 2rem; color: var(--primary-color); margin-bottom: 0.5rem;"></i>
                                    <strong>Chevaux</strong>
                                    <small class="text-muted">Gérer les chevaux</small>
                                </a>
                            </div>

                            <div class="col-md-6">
                                <a href="{{ path('app_sortie_index') }}" class="btn w-100 d-flex flex-column align-items-center p-3 text-decoration-none"
                                   style="background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--primary-ultra-light) 100%); border: 2px solid var(--border-color); border-radius: 12px; color: var(--primary-color); transition: var(--transition-base);"
