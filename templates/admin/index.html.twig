                                   onmouseover="this.style.transform='translateY(-5px)'; this.style.boxShadow='var(--shadow-lg)'"
                                   onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='var(--shadow-sm)'">
                                    <i class="bi bi-trophy" style="font-size: 2rem; color: var(--primary-color); margin-bottom: 0.5rem;"></i>
                                    <strong>Compétitions</strong>
                                    <small class="text-muted">Gérer les compétitions</small>
                                </a>
                            </div>

                            <div class="col-md-6">
                                <a href="{{ path('app_calendrier_index') }}" class="btn w-100 d-flex flex-column align-items-center p-3 text-decoration-none"
                                   style="background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--primary-ultra-light) 100%); border: 2px solid var(--border-color); border-radius: 12px; color: var(--primary-color); transition: var(--transition-base);"
                                   onmouseover="this.style.transform='translateY(-5px)'; this.style.boxShadow='var(--shadow-lg)'"
                                   onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='var(--shadow-sm)'">
                                    <i class="bi bi-calendar3" style="font-size: 2rem; color: var(--accent-color); margin-bottom: 0.5rem;"></i>
                                    <strong>Planning</strong>
                                    <small class="text-muted">Gérer le calendrier</small>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="col-lg-6">
                    <div class="card-modern">
                        <h4 class="text-primary-brand mb-4">
                            <i class="bi bi-people me-2" style="color: var(--accent-color);"></i>
                            Utilisateurs & Communication
                        </h4>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <a href="{{ path('app_user_index') }}" class="btn w-100 d-flex flex-column align-items-center p-3 text-decoration-none"
                                   style="background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--primary-ultra-light) 100%); border: 2px solid var(--border-color); border-radius: 12px; color: var(--primary-color); transition: var(--transition-base);"
