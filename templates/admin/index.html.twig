                                   onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='var(--shadow-sm)'">
                                    <i class="bi bi-heart-fill" style="font-size: 2rem; margin-bottom: 0.5rem; color: var(--primary-color);"></i>
                                    <strong>Poney club</strong>
                                    <small>Gestion des tarifs</small>
                                </a>
                            </div>

                            <div class="col-md-3">
                                <a href="{{ path('app_moniteur_index') }}" title="Moniteurs" class="btn w-100 d-flex flex-column align-items-center p-3 text-decoration-none"
