                                   onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='var(--shadow-sm)'">
                                    <i class="bi bi-person-gear" style="font-size: 2rem; margin-bottom: 0.5rem; color: var(--primary-color);"></i>
                                    <strong>Utilisateurs</strong>
                                    <small class="text-muted">Gérer les comptes</small>
                                </a>
                            </div>

                            <div class="col-md-6">
                                <a href="{{ path('app_contact_index') }}" class="btn w-100 d-flex flex-column align-items-center p-3 text-decoration-none"
