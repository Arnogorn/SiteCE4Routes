{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - Écuries des 4 Routes{% endblock %}

{% block body %}
    <section class="py-5">
        <div class="container">

            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="alert alert-danger mb-4" role="alert" style="background: rgba(220, 53, 69, 0.1); border: 2px solid var(--error-color); border-radius: 12px; color: var(--error-color);">
                    <i class="bi bi-exclamation-triangle me-2"></i>{{ flash_error }}
                </div>
            {% endfor %}


            <div class="text-center mb-5">
                <h1 class="text-primary-brand mb-3">
                    <i class="bi bi-key" style="color: var(--accent-color);"></i>
                    Mot de passe oublié
                    <i class="bi bi-key" style="color: var(--accent-color);"></i>
                </h1>
                <div style="height: 3px; width: 200px; background: linear-gradient(90deg, var(--primary-color), var(--accent-color), var(--primary-color)); margin: 0 auto; border-radius: 2px;"></div>
                <p class="mt-3" style="color: var(--text-secondary);">
                    Récupérez l'accès à votre compte facilement
                </p>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-6 col-md-8">
                    <div class="card-modern">
                        <div class="text-center mb-4">
                            <div class="feature-icon mx-auto mb-3" style="width: 80px; height: 80px;">
                                <i class="bi bi-envelope-at"></i>
                            </div>
                            <h3 class="text-primary-brand mb-3">
                                <i class="bi bi-arrow-clockwise me-2"></i>Réinitialiser votre mot de passe
                            </h3>
                        </div>


                        <div class="form-text-modern mb-4">
                            <i class="bi bi-info-circle me-2"></i>
                            Entrez votre adresse email pour recevoir un lien de réinitialisation de votre mot de passe.
                        </div>

                        {{ form_start(requestForm, {'attr': {'class': 'form-modern', 'novalidate': 'novalidate'}}) }}

{#                         Champ email #}
                        <div class="form-group-modern">
                            {{ form_label(requestForm.email, 'Adresse email', {'label_attr': {'class': 'form-label-modern required'}}) }}
                            {{ form_widget(requestForm.email, {'attr': {'class': 'form-control-modern', 'placeholder': 'votre-email@exemple.com'}}) }}
                            {{ form_errors(requestForm.email) }}
                            <div class="form-text-modern">
                                <i class="bi bi-shield-lock me-1"></i>
                                Nous vous enverrons un lien sécurisé pour réinitialiser votre mot de passe
                            </div>
                        </div>

{#                        Bouton de soumission #}
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-modern-primary" style="min-width: 250px;">
                                <i class="bi bi-send me-2"></i>Envoyer l'email de réinitialisation
                            </button>
                        </div>

                        {{ form_end(requestForm) }}

{#                         Section d'aide #}
                        <div class="mt-4 p-3" style="background: var(--bg-tertiary); border-radius: 12px; border-left: 4px solid var(--accent-color);">
                            <h6 class="text-primary-brand mb-2">
                                <i class="bi bi-lightbulb me-1"></i>Conseil
                            </h6>
                            <p class="small mb-0" style="color: var(--text-primary);">
                                Si vous ne recevez pas l'email dans quelques minutes, vérifiez votre dossier spam ou courrier indésirable.
                            </p>
                        </div>
                    </div>

{#                     Card avec liens utiles #}
                    <div class="card-modern mt-4">
                        <div class="text-center">
                            <h5 class="text-primary-brand mb-3">
                                <i class="bi bi-arrow-left-circle me-2"></i>Retour à la connexion
                            </h5>
                            <a href="{{ path('app_login') }}" class="btn btn-outline-modern">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Se connecter
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
