{% extends 'base.html.twig' %}

{% block title %}Email envoyé - Écuries des 4 Routes{% endblock %}

{% block body %}
    <section class="py-5">
        <div class="container">

            <div class="text-center mb-5">
                <h1 class="text-primary-brand mb-3">
                    <i class="bi bi-check-circle" style="color: var(--success-color);"></i>
                    Email envoyé
                    <i class="bi bi-check-circle" style="color: var(--success-color);"></i>
                </h1>
                <div style="height: 3px; width: 200px; background: linear-gradient(90deg, var(--success-color), var(--accent-color), var(--success-color)); margin: 0 auto; border-radius: 2px;"></div>
                <p class="mt-3" style="color: var(--text-secondary);">
                    Vérifiez votre boîte de réception
                </p>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-6 col-md-8">
                    <div class="card-modern">
                        <div class="text-center mb-4">
                            <div class="feature-icon mx-auto mb-3" style="width: 100px; height: 100px; background: linear-gradient(135deg, var(--success-color) 0%, #20c997 100%);">
                                <i class="bi bi-envelope-check" style="color: white; font-size: 2.5rem;"></i>
                            </div>
                            <h3 class="text-success mb-3">
                                <i class="bi bi-mailbox me-2"></i>Email de réinitialisation envoyé
                            </h3>
                        </div>


                        <div class="alert alert-success" style="background: rgba(40, 167, 69, 0.1); border: 2px solid var(--success-color); border-radius: 12px;">
                            <h5 class="alert-heading">
                                <i class="bi bi-info-circle me-2"></i>Instructions envoyées
                            </h5>
                            <p class="mb-0">
                                Si un compte correspond à votre adresse email, alors un email a été envoyé pour changer votre mot de passe.
                            </p>
                        </div>


                        <div class="form-text-modern mb-4">
                            <i class="bi bi-clock me-2"></i>
                            <strong>Durée de validité :</strong> Ce lien expirera dans {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.
                        </div>


                        <div class="p-4" style="background: var(--bg-tertiary); border-radius: 12px; border: 2px solid var(--border-color);">
                            <h5 class="text-primary-brand mb-3">
                                <i class="bi bi-question-circle me-2"></i>Vous ne trouvez pas l'email ?
                            </h5>

                            <div class="row g-3">
                                <div class="col-12">
                                    <div class="d-flex align-items-start">
                                        <i class="bi bi-1-circle-fill text-primary me-3 mt-1"></i>
                                        <div>
                                            <strong>Vérifiez votre dossier spam</strong>
                                            <p class="small mb-0">L'email peut parfois être classé comme courrier indésirable</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="d-flex align-items-start">
                                        <i class="bi bi-2-circle-fill text-primary me-3 mt-1"></i>
                                        <div>
                                            <strong>Patientez quelques minutes</strong>
                                            <p class="small mb-0">La livraison de l'email peut prendre quelques instants</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="d-flex align-items-start">
                                        <i class="bi bi-3-circle-fill text-primary me-3 mt-1"></i>
                                        <div>
                                            <strong>Réessayez si nécessaire</strong>
                                            <p class="small mb-2">Si vous ne recevez toujours rien :</p>
                                            <a href="{{ path('app_forgot_password_request') }}" class="btn btn-outline-modern btn-sm">
                                                <i class="bi bi-arrow-repeat me-1"></i>Essayer à nouveau
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="card-modern mt-4">
                        <div class="text-center">
                            <h5 class="text-primary-brand mb-3">
                                <i class="bi bi-house me-2"></i>Retour à l'accueil
                            </h5>
                            <div class="d-flex gap-2 justify-content-center">
                                <a href="{{ path('app_login') }}" class="btn btn-outline-modern">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>Se connecter
                                </a>
                                <a href="{{ path('index') }}" class="btn btn-modern-primary">
                                    <i class="bi bi-house me-2"></i>Accueil
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}