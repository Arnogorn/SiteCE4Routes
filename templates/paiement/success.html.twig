{% extends 'base.html.twig' %}

{% block title %}Paiement réussi{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body text-center">
                        <div class="success-animation mb-3">
                            <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                        </div>

                        <h2 class="text-success mb-3">Paiement réussi !</h2>

                        <div class="alert alert-success">
                            <strong>Félicitations !</strong><br>
                            Votre paiement de <strong>{{ (paiement.montant / 100) }}€</strong>
                            a été traité avec succès.
                        </div>

                        <div class="card bg-light">
                            <div class="card-header">
                                <h5>Détails de votre inscription</h5>
                            </div>
                            <div class="card-body">
                                <p><strong>Sortie :</strong> {{ sortie.titre }}</p>
                                <p><strong>Date :</strong> {{ sortie.date|date('d/m/Y à H:i') }}</p>
                                <p><strong>Durée :</strong> {{ sortie.duree }} heures</p>
                                <p><strong>Montant payé :</strong> {{ (paiement.montant / 100) }}€</p>
                                {% if sortie.moniteur %}
                                    <p><strong>Moniteur :</strong> {{ sortie.moniteur.user.nom }} {{ sortie.moniteur.user.prenom }}</p>
                                {% endif %}
                            </div>
                        </div>

                        <p class="mt-3 text-muted">
                            <i class="fas fa-info-circle"></i>
                            Vous êtes maintenant inscrit à cette sortie.
                            Un email de confirmation sera envoyé sous peu.
                        </p>

                        <div class="d-grid gap-2 mt-4">
                            <a href="{{ path('app_sortie_show', {id: sortie.id}) }}"
                               class="btn btn-primary">
                                <i class="fas fa-eye"></i>
                                Voir la sortie
                            </a>
                            <a href="{{ path('app_sortie_index') }}"
                               class="btn btn-outline-secondary">
                                <i class="fas fa-list"></i>
                                Retour à la liste des sorties
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .success-animation {
            animation: bounce 2s infinite;
        }

        @keyframes bounce {
            0%, 20%, 50%, 80%, 100% {
                transform: translateY(0);
            }
            40% {
                transform: translateY(-10px);
            }
            60% {
                transform: translateY(-5px);
            }
        }
    </style>
{% endblock %}