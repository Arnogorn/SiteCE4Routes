{% extends 'base.html.twig' %}

{% block body %}

        <div class="container sortie-inscription">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <h1 class="mb-4">
                        <i class="bi bi-calendar-event me-2"></i>
                        Inscription à la sortie : {{ sortie.titre }}
                    </h1>

                    <form action="{{ path('paiement_checkout', {id: sortie.id}) }}"
                          method="post"
                          data-prix-unitaire="{{ sortie.prix|number_format(2, '.', '') }}">

                        <fieldset class="mb-4">
                            <legend class="h4 mb-3">
                                <i class="bi bi-people me-2"></i>
                                Qui souhaitez-vous inscrire ?
                            </legend>

                            {# Case "Moi-même" #}
                            <div class="form-check">
                                <input class="form-check-input"
                                       type="checkbox"
                                       name="membres[]"
                                       value="me"
                                       id="user_self"
                                        {% if app.user in sortie.participants %} disabled {% endif %}>
                                <label class="form-check-label" for="user_self">
                                    <strong>Moi-même</strong> ({{ app.user.prenom }} {{ app.user.nom }})
                                    {% if app.user in sortie.participants %}
                                        <span class="badge bg-secondary ms-2">déjà inscrit</span>
                                    {% endif %}
                                </label>
                            </div>

                            {# Boucle sur les membres de la famille #}
                            {% for membre in app.user.famille.membre %}
                                <div class="form-check">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           name="membres[]"
                                           value="{{ membre.id }}"
                                           id="membre_{{ membre.id }}"
                                            {% if membre in sortie.membresFamilleInscrits %} disabled {% endif %}>
                                    <label class="form-check-label" for="membre_{{ membre.id }}">
                                        <strong>{{ membre.prenom }} {{ membre.nom }}</strong>
                                        {% if membre in sortie.membresFamilleInscrits %}
                                            <span class="badge bg-secondary ms-2">déjà inscrit</span>
                                        {% endif %}
                                    </label>
                                </div>
                            {% else %}
                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle me-2"></i>
                                    Aucun membre de famille enregistré.
                                </div>
                            {% endfor %}
                        </fieldset>

                        {# Section informations tarif #}
                        <div class="card mb-4">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <i class="bi bi-tag me-2"></i>
                                    Informations tarifaires
                                </h5>
                                <p class="card-text prix-unitaire">
                                    Tarif unitaire : <strong>{{ sortie.prix }} €</strong> par personne
                                </p>
                            </div>
                        </div>

                        {# Section récapitulatif #}
                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <div class="col-md-6">
                                        <h5 class="mb-1">
                                            <i class="bi bi-calculator me-2"></i>
                                            Récapitulatif
                                        </h5>
                                        <p class="mb-0">
                                            Participants sélectionnés : <span id="compteur" class="fw-bold">0</span>
                                        </p>
                                    </div>
                                    <div class="col-md-6 text-md-end">
                                        <p class="mb-1">Montant total :</p>
                                        <p class="mb-0" style="font-size: 1.5rem; font-weight: bold; color: var(--bs-primary);">
                                            <span id="total">0.00</span> €
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        {# Liste récapitulative #}
                        <ul id="recapitulatif" class="list-group mb-4"></ul>

                        {# Bouton de soumission #}
                        <div class="d-grid">
                            <button type="submit" id="btn-payer" class="btn btn-secondary btn-lg" disabled>
                                <i class="bi bi-credit-card me-2"></i>
                                Sélectionnez au moins une personne
                            </button>
                        </div>

                        <div class="d-grid mt-3 mb-4">
                            <a href="{{ path('app_sortie_show', { id: sortie.id }) }}" class="btn btn-outline-secondary">
                                ← Retour à la sortie
                            </a>
                        </div>

                        <p class="text-muted text-center mt-3 small">
                            <i class="bi bi-shield-check me-1"></i>
                            Paiement sécurisé via Stripe
                        </p>

                    </form>
                </div>
            </div>
        </div>


{% endblock %}


