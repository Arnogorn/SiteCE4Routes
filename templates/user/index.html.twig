{% extends 'base.html.twig' %}


{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <h1>liste des utilisateurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Email</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Date de Naissance</th>
                <th>Adresse</th>
                <th>Téléphone</th>
                <th>Téléphone de la personne à contacter</th>
                <th>Allergies</th>
                <th>Médecin Traitant</th>
                <th>Téléphone du Médecin</th>
                <th>Droit à l'image</th>
                <th>Actif</th>
                <th>Informations</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.dateNaissance ? user.dateNaissance|date('Y-m-d') : '' }}</td>
                <td>{{ user.adresse }}</td>
                <td>{{ user.telephone }}</td>
                <td>{{ user.telPersContact }}</td>
                {% if user.allergies is not empty %}
                    <td>{{ user.allergies }}</td>
                {% else %}
                    <td>Aucune</td>
                {% endif %}
                <td>{{ user.medecinTraitant }}</td>
                <td>{{ user.telMedecin }}</td>
                <td>{{ user.droitImage ? 'Oui' : 'Non' }}</td>
                <td>{{ user.actif ? 'Oui' : 'Non' }}</td>
                <td>{{ user.infos }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">Voir</a>
                    {% if app.user and app.user.id == user.id or 'ROLE_ADMIN' in app.user.roles%}
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="19">Aucun utilisateur trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
