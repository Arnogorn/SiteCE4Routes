{% extends 'base.html.twig' %}
{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('turbo:load', function() {
            // Désactiver Turbo pour cette page
            Turbo.session.drive = false;
        });
    </script>
{% endblock %}

{% block title %}Écurie de propriétaire{% endblock %}

{% block body %}
    <h1>Écurie de propriétaire</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ecurie_proprietaire.id }}</td>
            </tr>
            <tr>
                <th>Prestation</th>
                <td>{{ ecurie_proprietaire.prestation }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ ecurie_proprietaire.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ ecurie_proprietaire.prix }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_ecurie_proprietaire_index') }}">Retour à la liste</a>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('app_ecurie_proprietaire_edit', {'id': ecurie_proprietaire.id}) }}">Modifier</a>


    {{ include('ecurie_proprietaire/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
