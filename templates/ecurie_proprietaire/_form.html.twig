{{ form_start(form, {'attr': {'class': 'form-modern', 'novalidate': 'novalidate'}}) }}

<div class="row g-4">
    <div class="col-md-6">
        <div class="form-group-modern">
            {{ form_label(form.prestation, null, {'label_attr': {'class': 'form-label-modern required'}}) }}
            {{ form_widget(form.prestation, {'attr': {'class': 'form-control-modern', 'placeholder': 'Ex: Pension complète, Demi-pension, Box seul...'}}) }}
            {{ form_errors(form.prestation) }}
        </div>

        <div class="form-group-modern">
            {{ form_label(form.prix, null, {'label_attr': {'class': 'form-label-modern required'}}) }}
            {{ form_widget(form.prix, {'attr': {'class': 'form-control-modern', 'placeholder': '0.00', 'min': '0', 'step': '0.01'}}) }}
            {{ form_errors(form.prix) }}
            <div class="form-text-modern">
                <i class="bi bi-currency-euro me-1"></i>
                Prix mensuel de la prestation en euros
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group-modern">
            {{ form_label(form.description, null, {'label_attr': {'class': 'form-label-modern'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control-modern', 'rows': '6', 'placeholder': 'Décrivez en détail cette prestation : ce qui est inclus, les services proposés, les conditions...'}}) }}
            {{ form_errors(form.description) }}
            <div class="form-text-modern">
                <i class="bi bi-chat-text me-1"></i>
                Détails de la prestation pour informer les propriétaires
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <button type="submit" class="btn btn-modern-primary" style="min-width: 200px;">
        <i class="bi bi-check-circle me-2"></i>{{ button_label|default('Enregistrer') }}
    </button>
</div>

{{ form_end(form) }}